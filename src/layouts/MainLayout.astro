---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import '../styles/tailwind.css';
import 'animate.css';
const { title } = Astro.props;
---
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400..700;1,400..700&display=swap" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet" />
		<link rel="stylesheet" href="https://use.typekit.net/yfd6wlj.css">
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{Astro.props.title}</title>
	</head>
	<body class="bg-primary-900">

		<header class="sticky top-0 z-50" >
			<Header></Header>
		</header>
		
		<div class="overflow-hidden">
			<main class="mx-6 md:mx-12 bg-no-repeat bg-cover" style="background-image: url('/baggrund.svg');">
				<slot/>
			</main>
		</div>

		<footer>
			<Footer></Footer>
		</footer>
			
	</body>
</html>


<script>
	/* Import af Motion One bibliotek */
	import { animate, stagger, inView, scroll } from "motion";
	animate( "body", { opacity: [ 0, 1] }, { duration: 1 })


	/* Stagger animation */
	inView( "#artist-list" , () =>{
		animate(
		".staggeranimation",
		{ opacity: [0, 1] },
		{ 
			delay: stagger(0.5, { startDelay: 0.5 })
		}
		)
	})

	/* Stagger animation */
	inView( "#stagger" , () =>{
		animate(
		".staggeranimation li",
		{ opacity: [0, 1] },
		{ 
			delay: stagger(0.5, { startDelay: 0.5 })
		}
		)
	})
</script>
	