---
import Button from "./Button.astro";
import Heading from "./typography/Heading.astro";
import Bodytext from "./typography/Bodytext.astro";
const {title, description, price, buttonText,} = Astro.props;
---

<div class="p-6 w-full max-w-full md:max-w-[650px] bg-neutral-50/50 overflow-hidden">
  <Heading size="small" stylingclasses="md:text-3xl mb-4 mt-4 text-primary-900">
    {title}
  </Heading>

  <Bodytext size="small" stylingclasses="md:text-lg mb-4 text-primary-900 max-w-[50ch]">
    {description}
  </Bodytext>  

  <Bodytext size="small" stylingclasses="md:text-lg mb-4 text-primary-900 font-bold">
    {price}
  </Bodytext>  

  <a href="/billetformular">
    <Button variant="filled-primary" size="mobile-regular md:desktop-regular">
      {buttonText}
    </Button>
  </a>

  <slot />
</div> 

